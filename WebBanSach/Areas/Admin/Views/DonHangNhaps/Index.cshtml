@model IEnumerable<WebBanSach.Models.DonHangNhap>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="~/Admin">Tổng quan</a>
    </li>
    <li class="breadcrumb-item active">Quản lí hóa đơn nhập hàng</li>
</ol>


<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Bảng Quản Lí Hóa Đơn Nhập Hàng
    </div>
    <div class="card-body">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="/Admin/DonHangNhaps/Create" class="btn btn-info" role="button">Tạo đơn hàng</a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Mã hóa đơn
                        </th>
                        <th>
                            Ngày nhập
                        </th>
                        <th>
                            Tổng tiền
                        </th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tfoot>
                <tr>
                    <th>
                        Mã hóa đơn
                    </th>
                    <th>
                        Ngày nhập
                    </th>
                    <th>
                        Tổng tiền
                    </th>
                    <th>Chức năng</th>
                </tr>
                </tfoot>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaDonHang)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayNhap)
                    </td>
                    <td>
                        @String.Format("{0:0,0}", item.TongTien) đ

                    </td>
                    <td>
                        <a href="/Admin/DonHangNhaps/Edit/@item.MaDonHang"><i class="fas fa-fw fa-pencil-alt"></i></a>
                        <a href="/Admin/ChiTietDonNhaps/Index/@item.MaDonHang"><i class="fas fa-fw fa-info-circle"></i></a>
                        <a href="/Admin/DonHangNhaps/Delete/@item.MaDonHang"><i class="fas fa-fw fa-trash-alt"></i></a>
                    </td>
                </tr>
                }
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Cập nhật ngày @DateTime.Now</div>



   