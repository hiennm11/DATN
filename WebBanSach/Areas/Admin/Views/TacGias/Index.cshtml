@model IEnumerable<WebBanSach.Models.TacGia>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="~/Admin">Tổng quan</a>
    </li>
    <li class="breadcrumb-item active">Tác giả</li>
</ol>   

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Bảng Tác Giả
    </div>
  
    <div class="card-body">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="/Admin/TacGias/Create" class="btn btn-info" role="button">Thêm mới</a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TenTacGia)
                        </th>
                        <th>Chức năng</th>
                      
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TenTacGia)
                        </th>
                        <th>Chức năng</th>
                        
                    </tr>
                </tfoot>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenTacGia)
                        </td>     
                        <td>
                            <a href="/Admin/TacGias/Edit/@item.MaTacGia"><i class="fas fa-fw fa-pencil-alt"></i></a>
                   
                            <a href="/Admin/TacGias/Delete/@item.MaTacGia"><i class="fas fa-fw fa-trash-alt"style="color: red"></i></a>                           
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Cập nhật ngày @DateTime.Now</div>
</div>






