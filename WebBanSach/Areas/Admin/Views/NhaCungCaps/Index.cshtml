@model IEnumerable<WebBanSach.Models.NhaCungCap>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="~/Admin">Tổng quan</a>
    </li>
    <li class="breadcrumb-item active">Nhà cung cấp</li>
</ol>

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Nhà Cung Cấp
    </div>

    <div class="card-body">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="/Admin/NhaXuatBans/Create" class="btn btn-info" role="button">Thêm mới</a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TenNCC)
                        </th>
                        
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TenNCC)
                        </th>
                       
                        <th>Chức năng</th>
                    </tr>
                </tfoot>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenNCC)
                        </td>
                       
                        <td>

                            <a href="/Admin/NhaCungCaps/Edit/@item.MaNCC"><i class="fas fa-fw fa-pencil-alt"></i></a>

                            <a href="/Admin/NhaCungCaps/Delete/@item.MaNCC"><i class="fas fa-fw fa-trash-alt"style="color: red"></i></a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Cập nhật ngày @DateTime.Now</div>
</div>



