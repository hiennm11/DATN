@model IEnumerable<WebBanSach.Models.ChiTietDonNhap>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


</table>
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="~/Admin/Saches">Quản lý kho</a>
    </li>
    <li class="breadcrumb-item active">Kho hàng</li>
</ol>

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Bảng Quản Lí Hàng Nhập
    </div>

    <div class="card-body">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="/Admin/ChiTietDonNhaps/Create" class="btn btn-info" role="button">Thêm mới</a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DonHangNhap.MaDonHang)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sach.TenSach)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SoLuong)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DonGia)
                    </th>
                    @*<th>Chức năng</th>*@
                </tr>
                </thead>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DonHangNhap.MaDonHang)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sach.TenSach)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SoLuong)
                        </td>
                        <td>
                            @String.Format("{0:0,0}", item.DonGia) đ
                        </td>
                        @*<td>
                            <a href="/Admin/ChiTietDonNhaps/Edit/@item.MaDonHang"><i class="fas fa-fw fa-pencil-alt"></i></a>
                            <a href="/Admin/ChiTietDonNhaps/Delete/@item.MaDonHang"><i class="fas fa-fw fa-trash-alt"></i></a>
                        </td>*@
                    </tr>

                }
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Cập nhật ngày @DateTime.Now</div>
</div>


