@using WebBanSach.Models
@model List<GioHang>
@{
    ViewBag.Title = "XacNhanDonHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="cart-page">
    <div class="row">
        <div class="col-sm-6 cart-content">
            <div class="header"> <h2 class="title"> <i class="ca ca-map-marker"></i> Thông tin nhận hàng </h2> </div>


            <div class="panel-checkout">
                <div class="other-address">
                    <div class="form-group">
                        <label class="col-sm-4 control-label text-left"> Họ và tên <span style="color: red">*</span> </label>
                        <div class="col-sm-8">
                            <input tabindex="1" name="delivery_full_name" id="username" type="text" class="form-control input-sm" required="" placeholder="Họ tên người nhận" data-error="Chưa điền tên người nhận">
                            <div class="help-block with-errors js-validation-name">

                            </div>
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label text-left"> Địa chỉ <span style="color: red">*</span> </label>
                        <div class="col-sm-8">
                            <input tabindex="1" name="delivery_full_name" id="username" value="" type="text" class="form-control input-sm" required="" placeholder="Địa chỉ nhận sách" data-error="Chưa điền tên người nhận">
                            <div class="help-block with-errors js-validation-name">

                            </div>
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label text-left"> Điện thoại <span style="color: red">*</span> </label>
                        <div class="col-sm-8">
                            <input tabindex="1" name="delivery_full_name" id="username" value="" type="text" class="form-control input-sm" required="" placeholder="Số điện thoại liên lạc" data-error="Chưa điền tên người nhận">
                            <div class="help-block with-errors js-validation-name">

                            </div>
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label text-left"> Email </label>
                        <div class="col-sm-8">
                            <input tabindex="1" name="delivery_full_name" id="username" value="" type="text" class="form-control input-sm" required="" placeholder="Email">
                            <div class="help-block with-errors js-validation-name">

                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
        <div class="col-sm-6">
            <div class="table-responsive">
                <div class="adr-oms panel" id="panel_order">
                    <div class="header"> <h3 class="title"> <i class="ca ca-shopping-cart" aria-hidden="true"></i> Sản phẩm trong giỏ hàng </h3> </div> <div class="body">
                        @Html.Partial("GioHangPartial",Model)
                    </div> <div class="footer">
                        <table class="adr-oms table" id="table_order_footer">
                            <tfoot id="orderSummary">
                                <tr id="row_total_amount"> <td id="cell_total_amount_label">Tổng tiền</td> <td id="cell_total_amount_value" class="text-right"> <strong> <span class="js-total-no-ship">939.000đ</span> </strong> </td> </tr>
                                <tr id="row_total_purchase"> <td id="cell_total_purchase_label"> <span>Tổng tiền cần thanh toán</span> </td> <td id="cell_total_purchase_value" class="text-right"> <strong> <span class="js-total">939.000đ</span> </strong> </td> </tr>
                                <tr id="row_total_purchase"> <td id="cell_delivery_fee_label" colspan="2"> <span>Thời gian giao hàng:</span> <span id="cell_delivery_fee_value"> <strong class="text-underline"> <span class="js-delivery-time">Chưa xác định</span> </strong> </span> </td> </tr>

                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>  <div class="clearfix"></div>
</div>