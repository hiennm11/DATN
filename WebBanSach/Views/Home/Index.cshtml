@model IEnumerable<WebBanSach.Models.Sach>

@{
    ViewBag.Title = "Trang chủ";
    
}

<div class="main-content">
    <section id="slider_book-feature">
        <div class="container">
            <div class="row">
                <div class="col-lg-9 col-md-8 col-sm-12 padding-right-0">
                    <div class="wrap" style="height: 465px">
                        <div id="myCarousel" class="carousel slide" data-ride="carousel">
                            <!-- Indicators -->
                            <ol class="carousel-indicators">
                                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                                <li data-target="#myCarousel" data-slide-to="1"></li>
                                <li data-target="#myCarousel" data-slide-to="2"></li>
                            </ol>

                            <!-- Wrapper for slides -->
                            <div class="carousel-inner" role="listbox">
                                <div class="item active">
                                    <img src="~/Images/pic1.jpg" alt="New York" style="height: 465px">
                                    <div class="carousel-caption">

                                    </div>
                                </div>

                                <div class="item">
                                    <img src="~/Images/pic2.jpg" alt="Chicago" style="height: 465px">
                                    <div class="carousel-caption">

                                    </div>
                                </div>

                                <div class="item">
                                    <img src="~/Images/pic3.jpg" alt="Los Angeles" style="height: 465px">
                                    <div class="carousel-caption">

                                    </div>
                                </div>
                            </div>

                            <!-- Left and right controls -->
                            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-4 col-sm-12">
                    @Html.Action("SachNgauNhien")
                </div>
            </div>
        </div>
    </section>
    @*<div id="all_book">

            @Html.Partial("_Sach", Model)

        </div>*@
    <section id="all_book">
        <div class="container">
            <div class="book-tab">
                <div class="book-tab__head hidden-xs hidden-sm display-flex-center content-space-between">
                    <ul class="nav nav-pills">
                        <li class="active"><a data-toggle="pill" href="#hot-book">Sách Chọn Lọc</a></li>
                        <li><a data-toggle="pill" href="#new-book">Sách Mới</a></li>
                        <li><a data-toggle="pill" href="#free-book">Sách Bán Chạy</a></li>
                    </ul>
                    <!--                <a href="#" class="book-tab__detail font-size-12 font-italic color-dark">Chi tiết <i class="fa fa-angle-double-right"></i></a>-->
                </div>

                <div class="tab-content">
                    <div class="tab-mobile__title hidden-lg hidden-md">
                        <a data-toggle="pill" href="#hot-book" class="">
                            EBook Chọn Lọc
                            <span class="pull-right"><i class="fa fa-angle-down"></i></span>
                        </a>
                    </div>
                    <div id="hot-book" class="tab-pane fade active in">
                        @Html.Partial("_Sach", Model)
                    </div>

                    <div class="tab-mobile__title hidden-lg hidden-md">
                        <a data-toggle="pill" href="#new-book" class="active">
                            EBook Mới
                            <span class="pull-right"><i class="fa fa-angle-down"></i></span>
                        </a>
                    </div>
                    <div id="new-book" class="tab-pane fade">                       
                            @Html.Action("SachMoi")                     
                    </div>

                    <div class="tab-mobile__title hidden-lg hidden-md">
                        <a data-toggle="pill" href="#free-book" class="">
                            EBook Miễn Phí
                            <span class="pull-right"><i class="fa fa-angle-down"></i></span>
                        </a>
                    </div>
                    <div id="free-book" class="tab-pane fade">                        
                            @Html.Action("SachBanChay")                 
                    </div>

                </div>
            </div>
        </div>
    </section>


</div>

<section id="book_author">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-7 col-sm-6 full-xs">
                <div class="book-feature-slide">
                    <div class="title-page display-flex-center content-space-between">
                    </div>
                    <div class="row noibat-row">
                        <div class="slider__item col-md-4 col-xs-6">
                            @Html.Action("DanhmucFooter")
                        </div><!-- End item slider -->
                        <div class="slider__item col-md-4 col-xs-6">
                            @Html.Action("TacGiaFooter")
                        </div><!-- End item slider -->
                        <div class="slider__ite col-md-4 col-xs-6">
                            @Html.Action("NXBFooter")
                        </div><!-- End item slider -->
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-5 col-sm-6 full-xs">
                @Html.Action("TGNgauNhien")
            </div>
        </div>
    </div>
</section>


