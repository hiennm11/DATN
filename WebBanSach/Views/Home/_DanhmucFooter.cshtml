@model IEnumerable<WebBanSach.Models.LoaiSach>

<div class="item__wrap">
    <h3 class="item__title">Chủ đề nổi bật</h3>
    <div class="item__content">
        <ul>
            @foreach (var item in Model)
            {
                <li><a href="@Url.Action("Index",new {@danhmuc = item.MaLoai})">@item.TenLoai</a></li>
            }

        </ul>
    </div>
</div>