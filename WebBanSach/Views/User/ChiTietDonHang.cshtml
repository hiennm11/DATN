@model IEnumerable<WebBanSach.Models.ChiTietDonBan>

@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="breadcrumb-page" class="breadcrumb">
    <div class="container">
        <div class="row">
            <ul class="breadcrumb">
                <li>
                    <a href="/">Trang chủ</a>
                </li>
                <li class="active">Thông tin đơn hàng</li>
                <li class="active">Chi tiết đơn hàng</li>
            </ul>
        </div>
    </div>
</section>

<div class="page-title display-flex-center content-space-between table-xs">
    <h1 class="font-size-24 font-weight-bold color-dark full-xs">Chi tiết đơn hàng</h1>
    @*<span class="secondary_color_text full-xs">Tìm thấy:  <b>37</b> sách</span>*@
</div>



<table class="table">
    <tr>
        <th colspan="2">
            @Html.DisplayNameFor(model => model.Sach.TenSach)
        </th>
        <th>
            Số lượng đặt
        </th>
        <th>
            Đơn giá
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Sach.TenSach)
            </td>
            <td>
                @String.Format("{0:0,0}", item.DonGia)đ
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @String.Format("{0:0,0}",(item.DonGia * item.SoLuong))đ
                
            </td>

        </tr>
    }
    <tr>
        <th colspan="2">Tổng</th>
        <th>
            @ViewBag.TongSL
        </th>
        <th>
            @String.Format("{0:0,0}", ViewBag.TongTien)đ
        </th>

    </tr>

</table>

<a href="javascript:history.go(-1)" class="btn font_secondary" style="width: 180px; float: left; margin-right: 10px;    background-color: #1d7eb6; color: #fff;">Quay lại</a><br/>
